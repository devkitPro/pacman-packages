+    N3DS_texture->unswizzledWidth = TextureAlign8(texture->w);
+    N3DS_texture->unswizzledHeight = TextureAlign8(texture->h);
+    N3DS_texture->unswizzledPitch = N3DS_texture->unswizzledWidth * SDL_BYTESPERPIXEL(texture->format);
