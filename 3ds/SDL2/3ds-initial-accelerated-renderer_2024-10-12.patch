+            [2] = SDL_PIXELFORMAT_RGB565, // GPU_RGB565
+            [3] = SDL_PIXELFORMAT_RGBA4444 // GPU_RGBA4
+        },
+        .max_texture_width = 1024,
+        .max_texture_height = 1024,
+     }
+};
