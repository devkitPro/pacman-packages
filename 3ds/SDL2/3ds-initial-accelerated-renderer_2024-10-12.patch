+static int
+TextureNextPow2(unsigned int w)
+{
+    if (w < 8)
+        return 8;
+
+    w -= 1;
+    w |= w >> 1;
+    w |= w >> 2;
+    w |= w >> 4;
+    w |= w >> 8;
+    return w + 1;
+}
