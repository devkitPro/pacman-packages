+		case APTHOOK_ONSUSPEND:
+			app_pause = true;
+            break;
+        case APTHOOK_ONRESTORE:
+			app_pause = false;
+			app_exiting = false;
+            break;
+        case APTHOOK_ONEXIT:
+			app_exiting = true;
+            break;
+        default:
