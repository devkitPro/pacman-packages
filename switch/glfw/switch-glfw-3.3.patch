+static int resizeNativeWindow(_GLFWwindow* window, int width, int height)
+{
+    if (width > FB_WIDTH)
+    {
+        _glfwInputError(GLFW_INVALID_VALUE, "Invalid width (%d > %d)", width, FB_WIDTH);
+        return GLFW_FALSE;
+    }
+    if (height > FB_HEIGHT)
+    {
