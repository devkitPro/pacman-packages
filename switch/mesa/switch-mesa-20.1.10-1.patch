+	if (screen) {
+		screen->base.destroy(&screen->base);
+	} else {
+		nouveau_device_del(&dev);
+		nouveau_drm_del(&drm);
+	}
+	mtx_unlock(&nouveau_screen_mutex);
+	return NULL;
+}
