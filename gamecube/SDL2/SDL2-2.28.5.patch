+{
+    GX_Begin(GX_QUADS, GX_VTXFMT0, 4);
+    GX_Position2s16(x, y);
+    GX_TexCoord2u8(0, 0);
+    GX_Position2s16(x + curdata->w, y);
+    GX_TexCoord2u8(1, 0);
+    GX_Position2s16(x + curdata->w, y + curdata->h);
+    GX_TexCoord2u8(1, 1);
+    GX_Position2s16(x, y + curdata->h);
