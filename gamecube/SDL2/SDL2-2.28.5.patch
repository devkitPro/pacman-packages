+static s16 WPAD_Orient(WPADData *data, int motion)
+{
+    float out;
+
+    if (motion == 0)
+        out = data->orient.pitch;
+    else if (motion == 1)
+        out = data->orient.roll;
+    else
+        out = data->orient.yaw;
+
+    return (s16)((out / 180.0) * 128.0);
+}
