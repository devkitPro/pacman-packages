+
+static s16 WPAD_Stick(s16 x, s16 min, s16 center, s16 max, int flip)
+{
+    s16 d;
+    int ret;
+
+    x -= center;
+
+    if (x < 0)
+        d = center - min;
+    else
+        d = max - center;
+
+    if (center - min < 5)
+        return 0;
+    if (max - center < 5)
+        return 0;
+
+    if (d)
+        ret = (x << 15) / d;
+    else
+        return 0;
+
+    if (flip)
+        ret = -ret;
+
+    if (ret < AXIS_MIN)
+        ret = AXIS_MIN;
+    else if (ret > AXIS_MAX)
+        ret = AXIS_MAX;
+
+    return ret;
+}
