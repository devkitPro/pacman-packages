+void OGC_SetWidescreen(int wide)
+{
+	int width;
+	if(wide) {
+		width = 678;
+	}
+	else
+		width = 640;
+
+	vmode->viWidth = width;
+	vmode->viXOrigin = (VI_MAX_WIDTH_NTSC - width) / 2;
+
+	VIDEO_Configure (vmode);
+
+	if (xfb)
+		VIDEO_ClearFrameBuffer(vmode, xfb, COLOR_BLACK);
+
+	VIDEO_Flush();
+
+	VIDEO_WaitVSync(); VIDEO_WaitVSync();
+}
