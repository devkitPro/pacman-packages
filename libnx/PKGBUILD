
# Maintainer: Dave Murphy <davem@devkitpro.org>

pkgname=('libnx')
pkgver=2.4.0
pkgrel=1
pkgdesc="Nintendo Switch AArch64-only userland library."
arch=('any')
license=('custom')
url="http://github.com/switchbrew"
options=(!strip libtool staticlibs)
source=(${url}/${pkgname}/archive/v${pkgver}.tar.gz)
sha256sums=('a7ad71e12e9bd8106431739a854951593bf54f5f001d4c36d7ebeb5d980430f0')
makedepends=('devkitA64')

groups=('switch-dev')

build() {

  cd ${srcdir}/${pkgname}-${pkgver}/nx
  make

}

package() {

  cd ${srcdir}/${pkgname}-${pkgver}/nx
  make DESTDIR=$pkgdir install

}
