
# Maintainer: Dave Murphy <davem@devkitpro.org>

pkgname=('libnx')
pkgver=4.11.1
pkgrel=1
pkgdesc="Nintendo Switch AArch64-only userland library."
arch=('any')
license=('custom')
url="http://github.com/switchbrew"
options=(!strip libtool staticlibs)
source=(
  ${pkgname}-${pkgver}.tar.gz::${url}/${pkgname}/archive/v${pkgver}.tar.gz
)

makedepends=('devkitA64')

groups=('switch-dev')

build() {

  cd ${srcdir}/${pkgname}-${pkgver}/nx
  make

}

package() {

  cd ${srcdir}/${pkgname}-${pkgver}/nx
  make DESTDIR=$pkgdir install

}

sha256sums=('0670939dffc471a52d999f70d636e03962e3cce71878b3dccc222d92ddb7ca4d')
