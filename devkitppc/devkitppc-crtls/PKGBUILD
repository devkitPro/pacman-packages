
# Maintainer: Dave Murphy <davem@devkitpro.org>

pkgname=('devkitppc-crtls')
pkgver=1.0.0
pkgrel=2
pkgdesc="devkitPPC crtls."
arch=('any')
license=('custom')
url="https://devkitpro.org"
options=(!strip libtool staticlibs)

source=(
  ogc.ld
  rvl.ld
  gcn.ld
)

makedepends=('devkitPPC')
groups=('gamecube-dev' 'wii-dev')

package() {

  mkdir -p $pkgdir/opt/devkitpro/devkitPPC/powerpc-eabi/lib
  cp ${srcdir}/ogc.ld ${srcdir}/rvl.ld ${srcdir}/gcn.ld ${pkgdir}/opt/devkitpro/devkitPPC/powerpc-eabi/lib

}

sha256sums=('0c7b991a2a8427bca0a64db37138ecc95276eef3958a9be6da6310afd1a1066f')
